      <li>
        <i class="icon-li fa fa-user"></i>
          Wychowawcą klasy {{#if tutor.is_male }}był{{else}}była{{/if}}
        <a href="#/person/{{ tutor.id }}">{{ tutor.full_name }}</a>
      </li>
      <li>
        <i class="icon-li fa fa-calendar"></i>
        Uczniowie tej klasy uczęszczali do liceum w latach
        <strong>{{ first_year }}-{{ last_year }}</strong>
      </li>
      </li>

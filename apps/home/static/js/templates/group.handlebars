<div class="layout layout-stack-sm layout-main-left">

<div class="col-sm-7 col-md-8 layout-main">

  <div class="portlet">

    <h3 class="portlet-title">
      <u>Klasa {{ symbol }}</u>
    </h3>

    <style type="text/css">
      .pupil-thumbnail {
        width:125px;
        height:125px;
        display:block;
        margin-left:auto;
        margin-right: auto
      }

      .pupil-column {
        text-align: center;
      }

    </style>
    <div class="portlet-body">
        {{#each pupils}}
            <div class="col-md-3 pupil-column" style="margin-bottom: 30px;">
                {{#if picture }}
                <img src="{{ picture }}" class="thumbnail pupil-thumbnail">
                {{else}}
                <img src="media/unknown.png" class="thumbnail pupil-thumbnail">
                {{/if}}
                <h5><a href="#/person/{{ id }}" style="color: black">{{ full_name }}</a></h5>
            </div>
        {{/each}}
    </div> <!-- /.portlet-body -->
  </div> <!-- /.portlet -->



  <div class="row">

    <div class="col-md-6">



    </div> <!-- /.col -->

    <div class="col-md-6">

      <div class="portlet">


      </div> <!-- /.portlet -->

    </div> <!-- /.col -->

  </div> <!-- /.row -->



</div> <!-- /.layout-main -->



<div class="col-sm-5 col-md-4 layout-sidebar">


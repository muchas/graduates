<li>
    <a href="#/person/{{ id }}">
        <span style="display: block">
            <img src="{{#avatar thumbnail }}{{ thumbnail }}{{/avatar}}" style="width: 50px; height: 50px; margin-right: 6px;">
            {{#if married_name }}
            {{ first_name }} {{ married_name }} ({{ last_name }})
            {{ else }}
            {{ first_name }} {{ last_name }}
            {{/if}}
        </span>
    </a>
</li>